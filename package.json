{
  "name": "aurora-player",
  "version": "1.0.16",
  "homepage": "/aurora-player",
  "description": "A modern audio and video player component with Aurora effects and additional features",
  "main": "dist/index.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run build:app",
    "build:component": "rimraf dist && tsc -p tsconfig.build.json && babel src/lib --out-dir dist --extensions \".ts,.tsx\" --copy-files && npm run build:css",
    "build:css": "sass src/lib/:dist/ --no-source-map --style=compressed",
    "prebuild": "rimraf build",
    "build:app": "react-scripts build",
    "postbuild": "npm run copy-dist-to-build",
    "copy-dist-to-build": "cp -r dist/* build/dist/ 2>/dev/null || xcopy /E /I /Q dist build\\dist 2>nul || echo Copy completed",
    "build:lib": "npm run build:component",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@apron-design/react": "^26.0.3",
    "@gsap/react": "^2.1.2",
    "@react-three/drei": "^9.88.0",
    "@react-three/fiber": "^8.15.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/aos": "^3.0.7",
    "@types/gsap": "^3.0.0",
    "aos": "^2.3.4",
    "gsap": "^3.14.2",
    "ogl": "^1.0.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.70.0",
    "three": "^0.182.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.0",
    "@babel/core": "^7.22.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/three": "^0.182.0",
    "ajv": "^8.12.0",
    "cross-env": "^10.1.0",
    "react-scripts": "5.0.1",
    "rimraf": "^5.0.0",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
